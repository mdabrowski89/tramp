<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="1dp"
    android:background="@color/darkViolet">

    <pl.mobite.tramp.ui.custom.TimeTableToolbar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/tramStopDetailsView"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/lightViolet"
        app:layout_constraintHorizontal_bias="0.0"
        android:elevation="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:id="@+id/tramStopNameText"
        app:layout_constraintStart_toStartOf="@+id/tramStopDetailsView"
        app:layout_constraintEnd_toEndOf="@+id/tramStopDetailsView"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:textAllCaps="true"
        tools:text="Metro Ratusz ArsenaÅ‚"
        android:textColor="@color/darkViolet"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/tramDirectionText"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:id="@+id/tramDirectionText"
        app:layout_constraintStart_toStartOf="@+id/tramStopDetailsView"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tramStopNameText"
        android:textAllCaps="true"
        tools:text="Nowe Bemowo"
        android:textSize="10sp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tramStopDetailsView"
        android:textStyle="bold"
        android:textColor="@color/lightViolet4"
        android:layout_marginTop="2dp"
        android:elevation="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tramStopDetailsView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/timeTableRecyclerView"/>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tramStopDetailsView"
        app:layout_constraintVertical_bias="0.20"/>
</androidx.constraintlayout.widget.ConstraintLayout>